    {{> service_card
      icon="fas fa-home"
      name="Обустройство жилища"
      description="Профессиональная помощь в создании комфортной среды для питомца."
      feature_1="Подбор террариума/вольера"
      feature_2="Установка оборудования"
      feature_3="Декорирование"
      feature_4="Автоматизация ухода"
      price="от 5000 ₽"
    }}
