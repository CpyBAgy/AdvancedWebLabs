<div class="animals-page">
  <h1>Экзотические животные</h1>
  <p>Откройте для себя удивительный мир редких и необычных созданий</p>

  {{#if errorMessage}}
    <div class="alert alert-danger">
      {{errorMessage}}
    </div>
  {{/if}}

  {{!-- Фильтры по категориям --}}
  {{#if categories.length}}
    <div class="filter-section">
      <h3>Категории</h3>
      <div class="category-filter">
        <button class="filter-btn active" data-category="all">Все категории</button>
        {{#each categories}}
          <button class="filter-btn" data-category="{{id}}">{{name}}</button>
        {{/each}}
      </div>
    </div>
  {{/if}}

  {{!-- Контейнер для уведомлений SSE --}}
  <div id="notifications" class="notifications-container"></div>

  {{!-- Отображение животных --}}
  <div class="animal-grid">
    {{#if animals.length}}
      {{#each animals}}
        <div class="animal-card" data-category="{{categoryId}}">
          <div class="animal-image">
            <img src="/pics/animals/{{id}}.jpg" alt="{{name}}" onerror="this.src='/pics/animal-placeholder.jpg'">
          </div>
          <div class="animal-details">
            <h4>{{name}}</h4>
            <p class="animal-species">{{species}}</p>
            {{#if description}}
              <p class="animal-description">{{description}}</p>
            {{/if}}
            <p class="animal-price">{{price}} ₽</p>
            <div class="animal-features">
              {{#if age}}
                <span><i class="fas fa-birthday-cake"></i> {{age}} лет</span>
              {{/if}}
              {{#if gender}}
                <span><i class="fas fa-venus-mars"></i> {{gender}}</span>
              {{/if}}
            </div>
            <div class="animal-actions">
              <a href="/animals/{{id}}" class="btn btn-primary">Подробнее</a>
              <a href="/animals/{{id}}/edit" class="btn btn-secondary">Редактировать</a>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="empty-animals">
        <p>Животные не найдены.</p>
        <a href="/animals/add" class="btn btn-primary">Добавить новое животное</a>
      </div>
    {{/if}}
  </div>

  <div class="add-animal-btn">
    <a href="/animals/add" class="btn btn-success">
      <i class="fas fa-plus"></i> Добавить новое животное
    </a>
  </div>
</div>

<script>
  // Функциональность фильтрации по категории
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const animalCards = document.querySelectorAll('.animal-card');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Убираем выделение со всех кнопок
        filterButtons.forEach(btn => btn.classList.remove('active'));

        // Добавляем выделение на нажатую кнопку
        button.classList.add('active');

        const category = button.getAttribute('data-category');

        // Фильтруем карточки животных
        animalCards.forEach(card => {
          if (category === 'all' || card.getAttribute('data-category') === category) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>

