<div class="animal-detail-page">
  {{#if errorMessage}}
    <div class="error-container">
      <h2>Ошибка</h2>
      <p>{{errorMessage}}</p>
      <a href="/animals" class="btn btn-primary">Вернуться к списку животных</a>
    </div>
  {{else}}
    <div class="animal-header">
      <div class="back-link">
        <a href="/animals" class="btn btn-sm">
          <i class="fas fa-arrow-left"></i> Назад к списку
        </a>
      </div>
      <h1>{{animal.name}}</h1>
      <p class="animal-species">{{animal.species}}</p>
    </div>

    <div class="animal-container">
      <div class="animal-image-container">
        <img src="/pics/animals/{{animal.id}}.jpg" alt="{{animal.name}}" onerror="this.src='/pics/animal-placeholder.jpg'">
        <div class="animal-status {{animal.status}}">
          {{#if (eq animal.status "available")}}
            <span>Доступно</span>
          {{else if (eq animal.status "reserved")}}
            <span>Зарезервировано</span>
          {{else}}
            <span>Продано</span>
          {{/if}}
        </div>
      </div>

      <div class="animal-info">
        <div class="info-section">
          <h3>Информация</h3>
          <div class="info-grid">
            <div class="info-item">
              <span class="info-label">Категория:</span>
              <span class="info-value">{{animal.category.name}}</span>
            </div>
            <div class="info-item">
              <span class="info-label">Цена:</span>
              <span class="info-value price">{{animal.price}} ₽</span>
            </div>
            {{#if animal.age}}
              <div class="info-item">
                <span class="info-label">Возраст:</span>
                <span class="info-value">{{animal.age}} лет</span>
              </div>
            {{/if}}
            {{#if animal.gender}}
              <div class="info-item">
                <span class="info-label">Пол:</span>
                <span class="info-value">
                  {{#if (eq animal.gender "male")}}
                    Самец
                  {{else if (eq animal.gender "female")}}
                    Самка
                  {{else}}
                    {{animal.gender}}
                  {{/if}}
                </span>
              </div>
            {{/if}}
          </div>
        </div>

        {{#if animal.description}}
          <div class="info-section">
            <h3>Описание</h3>
            <p class="animal-description">{{animal.description}}</p>
          </div>
        {{/if}}

        <div class="animal-actions">
          <a href="/animals/{{animal.id}}/edit" class="btn btn-primary">
            <i class="fas fa-edit"></i> Редактировать
          </a>
          <form action="/animals/{{animal.id}}/delete" method="POST" class="delete-form" onsubmit="return confirm('Вы уверены, что хотите удалить это животное?');">
            <button type="submit" class="btn btn-danger">
              <i class="fas fa-trash"></i> Удалить
            </button>
          </form>
        </div>
      </div>
    </div>
  {{/if}}
</div>

<style>
  .animal-detail-page {
    padding: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .error-container {
    text-align: center;
    padding: 50px 20px;
    background-color: #fff3f3;
    border-radius: 10px;
    border: 1px solid #ffcaca;
  }

  .animal-header {
    margin-bottom: 30px;
    position: relative;
  }

  .back-link {
    margin-bottom: 15px;
  }

  .animal-header h1 {
    font-size: 2.5rem;
    margin: 0;
    color: #2e7d32;
  }

  .animal-species {
    font-size: 1.2rem;
    color: #666;
    font-style: italic;
    margin-top: 5px;
  }

  .animal-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    padding: 0;
    overflow: hidden;
  }

  .animal-image-container {
    position: relative;
    height: 100%;
  }

  .animal-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .animal-status {
    position: absolute;
    top: 20px;
    right: 20px;
    padding: 8px 15px;
    border-radius: 20px;
    font-weight: bold;
    color: white;
  }

  .animal-status.available {
    background-color: #4caf50;
  }

  .animal-status.reserved {
    background-color: #ff9800;
  }

  .animal-status.sold {
    background-color: #f44336;
  }

  .animal-info {
    padding: 30px;
    display: flex;
    flex-direction: column;
  }

  .info-section {
    margin-bottom: 25px;
  }

  .info-section h3 {
    color: #2e7d32;
    margin-bottom: 15px;
    font-size: 1.4rem;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 10px;
  }

  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
  }

  .info-item {
    display: flex;
    flex-direction: column;
  }

  .info-label {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 5px;
  }

  .info-value {
    font-size: 1.1rem;
    font-weight: 500;
  }

  .info-value.price {
    color: #2e7d32;
    font-weight: bold;
    font-size: 1.3rem;
  }

  .animal-description {
    line-height: 1.6;
    color: #444;
  }

  .animal-actions {
    display: flex;
    gap: 15px;
    margin-top: auto;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
    border: none;
  }

  .btn-sm {
    padding: 5px 10px;
    font-size: 0.9rem;
  }

  .btn-primary {
    background-color: #2e7d32;
    color: white;
  }

  .btn-primary:hover {
    background-color: #1b5e20;
  }

  .btn-danger {
    background-color: #f44336;
    color: white;
  }

  .btn-danger:hover {
    background-color: #d32f2f;
  }

  .delete-form {
    display: inline;
  }

  @media (max-width: 768px) {
    .animal-container {
      grid-template-columns: 1fr;
    }

    .animal-image-container {
      height: 300px;
    }

    .info-grid {
      grid-template-columns: 1fr;
    }
  }
</style>