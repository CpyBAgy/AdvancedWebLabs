{{#contentFor 'scripts'}}
<script>
    // Добавляем активный класс для текущей страницы
    $(document).ready(function() {
        $('.main-menu a[href="/users"]').addClass('active');
        
        // Фильтрация пользователей (демонстрационная функция)
        $('#searchUsers').on('input', function() {
            const searchTerm = $(this).val().toLowerCase();
            $('.user-card').each(function() {
                const userName = $(this).find('h3').text().toLowerCase();
                const userBio = $(this).find('.user-bio').text().toLowerCase();
                
                if (userName.includes(searchTerm) || userBio.includes(searchTerm)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
        
        // Сортировка пользователей (демонстрационная функция)
        $('#sortUsers').on('change', function() {
            const sortOption = $(this).val();
            
            if (sortOption === 'name') {
                // Здесь была бы реальная логика сортировки
                alert('Сортировка по имени');
            } else if (sortOption === 'date') {
                alert('Сортировка по дате регистрации');
            } else if (sortOption === 'animals') {
                alert('Сортировка по количеству животных');
            }
        });
    });
</script>
{{/contentFor}} 