<div class="init-db-page">
  <h1>Инициализация базы данных</h1>

  {{#if success}}
    <div class="success-message">
      <i class="fas fa-check-circle"></i>
      <h2>{{message}}</h2>
    </div>

    <div class="data-summary">
      <div class="summary-section">
        <h3>Созданные категории:</h3>
        <ul>
          {{#each categories}}
            <li>
              <strong>{{name}}</strong>: {{description}}
              <br>
              <small>ID: {{id}}</small>
            </li>
          {{/each}}
        </ul>
      </div>

      {{#if animal}}
        <div class="summary-section">
          <h3>Тестовое животное:</h3>
          <div class="animal-info">
            <p><strong>Имя:</strong> {{animal.name}}</p>
            <p><strong>Вид:</strong> {{animal.species}}</p>
            <p><strong>Цена:</strong> {{animal.price}} ₽</p>
            <p><strong>Описание:</strong> {{animal.description}}</p>
            <p><strong>ID:</strong> {{animal.id}}</p>
          </div>
        </div>
      {{/if}}
    </div>

    <div class="navigation-links">
      <a href="/animals" class="btn btn-primary">Перейти к животным</a>
      <a href="/animals/add" class="btn btn-secondary">Добавить ещё животных</a>
    </div>
  {{else}}
    <div class="error-message">
      <i class="fas fa-exclamation-triangle"></i>
      <h2>{{message}}</h2>
      {{#if error}}
        <div class="error-details">
          <pre>{{error}}</pre>
        </div>
      {{/if}}
    </div>

    <div class="navigation-links">
      <a href="/" class="btn btn-primary">Вернуться на главную</a>
      <a href="/init-db" class="btn btn-warning">Попробовать снова</a>
    </div>
  {{/if}}
</div>

