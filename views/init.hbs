  }

  .init-db-page h1 {
    color: #2e7d32;
    margin-bottom: 30px;
    text-align: center;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 15px;
  }

  .success-message, .error-message {
    text-align: center;
    padding: 20px;
    border-radius: 10px;
    margin-bottom: 30px;
  }

