  }

  .success-message i, .error-message i {
    font-size: 3rem;
    margin-bottom: 15px;
  }

  .data-summary {
    margin: 30px 0;
  }

  .summary-section {
    margin-bottom: 25px;
    padding: 20px;
    background-color: #f9f9f9;
    border-radius: 8px;
  }

  .summary-section h3 {
    margin-bottom: 15px;
    color: #2e7d32;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 10px;
  }

  .summary-section ul {
    list-style-type: none;
    padding: 0;
  }

  .summary-section li {
    margin-bottom: 10px;
    padding: 10px;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
