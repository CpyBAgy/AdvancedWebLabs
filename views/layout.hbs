<!-- Подключение скриптов -->
<script src="/js scripts/auth.js"></script>
<script src="/js scripts/sse-handler.js"></script>
<script>
  // Скрипт для сохранения параметров авторизации при переходе по ссылкам
  document.addEventListener('DOMContentLoaded', function() {
    // Получаем параметры авторизации из URL
    const params = new URLSearchParams(window.location.search);
    const isAuthenticated = params.get('auth') === 'true';
    const username = params.get('username');

    // Если пользователь авторизован
    if (isAuthenticated && username) {
      // Обрабатываем все ссылки, которые не содержат параметры авторизации
      document.querySelectorAll('a').forEach(function(link) {
        const href = link.getAttribute('href');

        // Игнорируем внешние ссылки и якоря
        if (href && !href.startsWith('http://') && !href.startsWith('https://') && !href.startsWith('#')) {
          // Проверяем, есть ли уже параметры в URL
          const hasParams = href.includes('?');
          const separator = hasParams ? '&' : '?';

          // Добавляем параметры авторизации
          link.setAttribute('href', `${href}${separator}auth=true&username=${encodeURIComponent(username)}`);
        }
      });
    }
  });
</script>
